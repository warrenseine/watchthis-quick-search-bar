{
  "name": "WatchThis Quick Search Bar",
  "version": "1.0",
  "icons": { "128": "icon_128.png" },
  "description": "A powerful quick search feature replacing the classic WatchThis search bar. It'll search as you type!",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["http://watchth.is/*"],
      "js": ["jquery.js", "search.js"],
      "css": ["search.css"]
    }
  ],
  "update_url": "https://github.com/warrenseine/watchthis-quick-search-bar/raw/master/updates.xml"
}
